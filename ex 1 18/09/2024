        "# Início do programa\n",
        "\n",
        "# Ler um valor inteiro do usuário\n",
        "x = int(input(\"Digite um valor inteiro: \"))\n",
        "\n",
        "# Calcular o resto da divisão de x por 3\n",
        "r = x % 3\n",
        "\n",
        "# Verificar se o resto é zero\n",
        "if r == 0:\n",
        "    # Se r é zero, x é múltiplo de 3\n",
        "    print(\"Múltiplo\")\n",
        "else:\n",
        "    # Se r não é zero, x não é múltiplo de 3\n",
        "    print(\"Não múltiplo\")\n",
        "\n",
        "# Fim do programa\n"
