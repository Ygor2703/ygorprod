        "import math\n",
        "#solicita ao usuario que insira o angulo em radianos\n",
        "radianos = float(input(\"Digite o angulo em radianos: \"))\n",
        "#converte o angulo para graus usando a formula g = r * (180/3.14)\n",
        "graus = radianos * (180 / math.pi)\n",
        "#exibe o resultado\n",
        "print(f\"o angulo de {radianos:-4f} radianos e igual a {graus:-2f} graus.\")\n"
